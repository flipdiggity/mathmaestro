generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(cuid())
  clerkId          String        @unique
  email            String        @unique
  name             String?
  stripeCustomerId String?       @unique
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  children         Child[]
  usageRecords     UsageRecord[]
}

model Child {
  id             String         @id @default(cuid())
  name           String
  grade          Int
  track          String         // e.g. "accelerated", "standard"
  state          String         @default("TX")
  district       String         @default("eanes-isd")
  targetTestDate DateTime?
  createdAt      DateTime       @default(now())
  userId         String
  user           User           @relation(fields: [userId], references: [id])
  worksheets     Worksheet[]
  topicMastery   TopicMastery[]

  @@index([userId])
}

model Worksheet {
  id            String         @id @default(cuid())
  childId       String
  child         Child          @relation(fields: [childId], references: [id])
  title         String
  weekNumber    Int?
  dayOfWeek     String?        // "Monday", "Tuesday", etc.
  questionsJson String         // JSON array of questions with answers
  topicIdsJson  String         // JSON array of topic IDs covered
  status        String         @default("generated") // generated, printed, graded
  createdAt     DateTime       @default(now())
  gradingResult GradingResult?
}

model GradingResult {
  id             String   @id @default(cuid())
  worksheetId    String   @unique
  worksheet      Worksheet @relation(fields: [worksheetId], references: [id])
  photoUrl       String?
  totalQuestions  Int
  correctCount   Int
  scorePercent   Float
  resultsJson    String   // JSON array of per-question results
  createdAt      DateTime @default(now())
}

model TopicMastery {
  id              String   @id @default(cuid())
  childId         String
  child           Child    @relation(fields: [childId], references: [id])
  topicId         String
  topicName       String
  gradeLevel      Int
  mastery         Float    @default(0) // 0-100
  timesPracticed  Int      @default(0)
  lastPracticedAt DateTime?
  lastScore       Float?

  @@unique([childId, topicId])
}

model UsageRecord {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  type        String   // "generate" | "grade"
  worksheetId String?
  creditsCost Int
  createdAt   DateTime @default(now())

  @@index([userId, type])
}
